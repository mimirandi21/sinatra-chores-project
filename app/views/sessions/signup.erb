<link rel="stylesheet" href="/stylesheets/session.css" />
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Carter+One&family=Caveat:wght@700&family=Gloria+Hallelujah&family=Gochi+Hand&family=Indie+Flower&family=Lato&family=Luckiest+Guy&family=Merienda+One&family=Permanent+Marker&family=Shadows+Into+Light&family=Ultra&display=swap" rel="stylesheet">

<body id="body">
<% if @message %>
    <div> <%= @message  %></div>
<% end %>

<h1>Sign up for a family account.</h1>
<h5>This can only be done by a parent (Sorry, kiddos!)</h5>
    <form method="post" action="/signup">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="parent[email]"><br/>
        <label for="password">Password</label>
        <input type="password" id="password" name="parent[password]"><br/>
        <label for="first_name">First Name</label>
        <input type="text" id="first_name" name="parent[first_name]"><br/>
        <label for="last_name">Last Name</label>
        <input type="text" id="last_name" name="parent[last_name]"><br/>
        <input type="submit" value="Create Your Account!">
    </form>
    <a href="/login_route">Log In</a>
</body>