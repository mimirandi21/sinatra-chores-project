<link rel="stylesheet" href="/stylesheets/parent.css"/>
<link rel="stylesheet" href="/stylesheets/main.css" />

<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Carter+One&family=Caveat:wght@700&family=Gloria+Hallelujah&family=Gochi+Hand&family=Indie+Flower&family=Lato&family=Luckiest+Guy&family=Merienda+One&family=Permanent+Marker&family=Shadows+Into+Light&family=Ultra&display=swap" rel="stylesheet">

<body class="edit-background">
    

    <form class="form2" method="post" action="/parents/<%= @parent.id %>">
    <h1>Edit your account</h1>
        <input id="hidden" type="hidden" name="_method" value="patch">
        <label for="email">Email Address  </label><input type="email" id="email" name="parent[email]" value="<%= @parent.email %>"><br/>
        <label for="password">Password  </label><input type="password" id="password" name="parent[password]"><br/>
        <label for="first_name">First Name  </label><input type="text" id="first_name" name="parent[first_name]" value="<%= @parent.first_name %>"><br/>
        <label for="last_name">Last Name  </label><input type="text" id="last_name" name="parent[last_name]" value="<%= @parent.last_name %>"><br/>
        <input class="my-other-button" type="submit" value="Edit Your Account!">

        <a class="my-other-button" href="/parents/<%= @parent.id %>/delete">Delete Your Account</a>
    </form>
    
</body>
