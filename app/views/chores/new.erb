<link rel="stylesheet" href="/stylesheets/chore.css" />
<link rel="stylesheet" href="/stylesheets/main.css" />
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Carter+One&family=Caveat:wght@700&family=Gloria+Hallelujah&family=Gochi+Hand&family=Indie+Flower&family=Lato&family=Luckiest+Guy&family=Merienda+One&family=Permanent+Marker&family=Shadows+Into+Light&family=Ultra&display=swap" rel="stylesheet">

<body class="new-chore-background">

    <form class="form1" method="post" action="">
        <h1>Create a chore!</h1><br/>
        <label for="name">Chore Name</label><input type="text" id="name" name="chore[name]"><br/>
        <label for="value">Chore Value</label><input type="number" min="1" step="any" id="value" name="chore[value]"><br/>
        <input type="hidden" id="parent_id" name="chore[parent_id]" value="<%= @parent.id %>"><br/>
        <input type="hidden" id="tagged_complete" name="chore[tagged_complete]" value=0>
        <input class="my-chore-button" type="submit" value="Create a New Chore!">
        <a class="my-chore-button" href="/parents/<%= @parent.id %>">Go Back</a>
    </form>
    
</body>
